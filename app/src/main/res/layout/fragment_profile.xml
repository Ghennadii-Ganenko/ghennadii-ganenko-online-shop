<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ghost_white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bnvMenu"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:requiresFadingEdge="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvProfile"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_arrow_left" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="33dp"
                    android:text="@string/profile"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivUserPhoto"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    app:layout_constraintTop_toBottomOf="@id/tvProfile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="19dp"
                    app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                    android:src="@drawable/user_placeholder_photo"
                    android:padding="1dp"
                    app:strokeColor="@color/silver"
                    app:strokeWidth="1dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvChangePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/ivUserPhoto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp"
                    android:text="@string/change_photo"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/gray80"
                    android:textSize="8sp"
                    tools:ignore="SmallSp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvChangePhoto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="17dp"
                    android:text="@string/user_name"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/gray3F"
                    android:textSize="15sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUploadItem"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    app:layout_constraintTop_toBottomOf="@id/tvUserName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="36dp"
                    android:layout_marginHorizontal="43dp"
                    android:background="@drawable/button_confirm_background"
                    android:drawableStart="@drawable/ic_share"
                    android:paddingHorizontal="50dp"
                    android:text="@string/upload_item"
                    android:textAllCaps="false"
                    android:textColor="@color/mercury"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTradeStoreCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnUploadItem"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/ic_credit_card"
                    android:padding="9dp"
                    android:background="@drawable/shape_circle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTradeStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ivTradeStoreCard"
                    app:layout_constraintTop_toTopOf="@id/ivTradeStoreCard"
                    app:layout_constraintBottom_toBottomOf="@id/ivTradeStoreCard"
                    android:layout_marginStart="6dp"
                    android:text="@string/trade_store"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/maire"
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTradeStoreMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/ivTradeStoreCard"
                    app:layout_constraintBottom_toBottomOf="@id/ivTradeStoreCard"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="45.5dp"
                    android:src="@drawable/ic_arrow_right"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPaymentMethodCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivTradeStoreCard"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_credit_card"
                    android:padding="9dp"
                    android:background="@drawable/shape_circle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvPaymentMethod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ivPaymentMethodCard"
                    app:layout_constraintTop_toTopOf="@id/ivPaymentMethodCard"
                    app:layout_constraintBottom_toBottomOf="@id/ivPaymentMethodCard"
                    android:layout_marginStart="6dp"
                    android:text="@string/payment_method"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/maire"
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivPaymentMethodMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/ivPaymentMethodCard"
                    app:layout_constraintBottom_toBottomOf="@id/ivPaymentMethodCard"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="45.5dp"
                    android:src="@drawable/ic_arrow_right"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivBalanceCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivPaymentMethodCard"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_credit_card"
                    android:padding="9dp"
                    android:background="@drawable/shape_circle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ivBalanceCard"
                    app:layout_constraintTop_toTopOf="@id/ivBalanceCard"
                    app:layout_constraintBottom_toBottomOf="@id/ivBalanceCard"
                    android:layout_marginStart="6dp"
                    android:text="@string/balance"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/maire"
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/ivBalanceCard"
                    app:layout_constraintBottom_toBottomOf="@id/ivBalanceCard"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="31dp"
                    android:paddingHorizontal="10dp"
                    android:gravity="end"
                    android:text="@string/_0"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/maire"
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTradeHistoryCard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivBalanceCard"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_credit_card"
                    android:padding="9dp"
                    android:background="@drawable/shape_circle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvTradeHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ivTradeHistoryCard"
                    app:layout_constraintTop_toTopOf="@id/ivTradeHistoryCard"
                    app:layout_constraintBottom_toBottomOf="@id/ivTradeHistoryCard"
                    android:layout_marginStart="6dp"
                    android:text="@string/trade_history"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/maire"
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivTradeHistoryMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/ivTradeHistoryCard"
                    app:layout_constraintBottom_toBottomOf="@id/ivTradeHistoryCard"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="45.5dp"
                    android:src="@drawable/ic_arrow_right"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRestorePurchase"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivTradeHistoryCard"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_reload"
                    android:padding="9dp"
                    android:background="@drawable/shape_circle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRestorePurchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ivRestorePurchase"
                    app:layout_constraintTop_toTopOf="@id/ivRestorePurchase"
                    app:layout_constraintBottom_toBottomOf="@id/ivRestorePurchase"
                    android:layout_marginStart="6dp"
                    android:text="@string/restore_purchase"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/maire"
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRestorePurchaseMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/ivRestorePurchase"
                    app:layout_constraintBottom_toBottomOf="@id/ivRestorePurchase"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="45.5dp"
                    android:src="@drawable/ic_arrow_right"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivHelp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivRestorePurchase"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_help"
                    android:padding="9dp"
                    android:background="@drawable/shape_circle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ivHelp"
                    app:layout_constraintTop_toTopOf="@id/ivHelp"
                    app:layout_constraintBottom_toBottomOf="@id/ivHelp"
                    android:layout_marginStart="6dp"
                    android:text="@string/help"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/maire"
                    android:textSize="14sp"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivLogOut"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ivHelp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_log_out"
                    android:padding="9dp"
                    android:background="@drawable/shape_circle"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvLogOut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/ivLogOut"
                    app:layout_constraintTop_toTopOf="@id/ivLogOut"
                    app:layout_constraintBottom_toBottomOf="@id/ivLogOut"
                    android:layout_marginStart="6dp"
                    android:text="@string/log_out"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/maire"
                    android:textSize="14sp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bnvMenu"
            android:layout_width="match_parent"
            android:layout_height="63dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bottom_navigation_background"
            app:menu="@menu/bottom_navigation_items"
            app:labelVisibilityMode="unlabeled"
            app:itemIconTint="@color/selector_color_icon"
            app:itemBackground="@drawable/layer_bottom_circle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>